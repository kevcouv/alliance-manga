{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
    <main class="container">
        <section id="account-page">
            <h4>Votre compte</h4>
            <div class="row text-center justify-content-center">
                <div class=" col-md-3 col-11 card" style="min-width: 350px;  max-width: 100%;">
                    <a href="{{ path('accountDetails',{id:app.user.id}) }}">
                        <div class="card-body">
                            <p>
                                <i class="fas fa-user-circle fa-3x"></i>
                            </p>
                            <div>
                                <h6 class="card-title">Informations</h6>
                            </div>
                        </div>
                    </a>
                </div>
                <div class=" col-md-3 col-11 card" style="min-width: 350px; max-width: 100%;">
                    <a style="text-decoration: none" href="{{ path('address', {id:app.user.id}) }}">
                        <div class="card-body">
                            <p>
                                <i class="fas fa-map-marker fa-3x"></i>
                            </p>
                            <div>
                                <h6 class="card-title">Adresses</h6>
                            </div>
                        </div>
                    </a>
                </div>
                <div class=" col-md-3 col-11 card" style="min-width: 350px; max-width: 100%;">
                    <a href="{{ path('purchases', {id:app.user.id}) }}">
                        <div class="card-body">
                            <p>
                                <i class="fas fa-calendar fa-3x"></i>
                            </p>
                            <div>
                                <h6 class="card-title">Historique et d√©tails de mes commandes</h6>
                            </div>
                        </div>
                    </a>
                </div>
                {% if is_granted('ROLE_ADMIN') %}
                    <div class=" col-md-3 col-11 card"
                         style="min-width: 350px; max-width: 100%;">
                        <a href="{{ path('admin') }}">
                            <div class="card-body">
                                <p>
                                    <i class="fas fa-user-secret fa-3x"></i>
                                </p>
                                <div>
                                    <h6 class="card-title">Administration</h6>
                                </div>
                            </div>
                        </a>
                    </div>
                {% endif %}
            </div>
        </section>
    </main>

    :
{% endblock %}
