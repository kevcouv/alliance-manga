{% block nav %}
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top" style=" background-color: rgba(15, 19, 25, 0.95)">
        <div class="container">
        <a class="navbar-brand" href="{{ path('home') }}">Alliance Manga</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarColor03">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="">Mon compte</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="">Mon panier</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('licences') }}">Les Licences</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('figurines') }}">Figurines</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('derived') }}">Produits Dérivés</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Nouveautés</a>
                </li>

                <li class="nav-item">
                    {% if not app.user %}
                        <a href="{{ path('login') }}">
                            Mon compte </a>
                    {% else %}

                        <div class="dropdown">
                            <button  type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                {{ app.user.firstName }}
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="">Mon Profil</a>
                                <a class="dropdown-item" href="">Modifier le mot de passe</a>

                                {% if is_granted('ROLE_ADMIN') %}
                                    <a class="dropdown-item" href="{{ path('admin') }}">Administration</a>
                                {% endif %}
