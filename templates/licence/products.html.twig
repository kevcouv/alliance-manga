{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}

{% block body %}
    <section>
        <div class="row">
            <img src="{{ asset('img/manga/') ~ licence.image }}" class="img-fluid" alt="Responsive image">
        </div>
    </section>

    <main class="container">
        <section id="products-home" class="border-top" style="padding-top: 1em">
            <div class="row justify-content-center">
                <div class="col-md-4 col-12">
                    <div class="border-right">
                        <h5 class="text-left">Nouveaut√©s </h5>
                        <div class="products-figurine">
                            {% for product in products |sort((a, b) => b.createdat <=> a.createdat)|slice(0, 2) %}
                                <div class="col-lg-12 col-md-12 col-6" style=" width: 250px">
                                    <a  class="card" href="{{ path('product', {id:product.id}) }}">
                                        <img src="{{ asset('img/product/') ~ product.image }}" class="card-img-top"
                                             alt="{{ product.image }}">
                                        <div class="card-body">

                                            <span >{{ product.nameCharacter }}</span><br>

                                            <span>{{ product.manga.title }}</span><br>

                                            <span class="float-right font-weight-bold">{{ product.price }}.00 &euro;</span>
                                        </div>
                                    </a>
                                    <a href="{{ path('panier_add', {'id':product.id}) }}">
                                        <div>Ajouter au panier</div>
                                    </a>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>

                <div class=" row col-md-8 col-12" style="margin-left: 1%">
                    {% for product in products %}
                            <div class="col-lg-4 col-md-6 col-6" style=" max-width: 100%">
                                <a  class="card" href="{{ path('product', {id:product.id}) }}">
                                    <img src="{{ asset('img/product/') ~ product.image }}" class="card-img-top"
                                         alt="{{ product.image }}">
                                    <div class="card-body">

                                        <span >{{ product.nameCharacter }}</span><br>

                                        <span>{{ product.manga.title }}</span><br>

                                        <span class="float-right font-weight-bold">{{ product.price }}.00 &euro;</span>
                                    </div>
                                </a>
                                <a href="{{ path('panier_add', {'id':product.id}) }}">
                                    <div>Ajouter au panier</div>
                                </a>
                            </div>
                    {% endfor %}
                </div>
            </div>
        </section>
    </main>
{% endblock %}