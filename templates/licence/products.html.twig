{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}

{% block body %}
    <main>
        <section>
            <div class="row">
                <img src="{{ asset('img/manga/') ~ licence.image }}" class="img-fluid" alt="Responsive image">
            </div>
        </section>

        <section id="products-home">
            <div class="row">
                {% for product in products %}
                    <div class="col-lg-3 col-md-4 col-6">
                        <div style="min-width:150px;max-width: 250px">
                            <a href="{{ path('product', {id:product.id}) }}">
                                <img src="{{ asset('img/product/') ~ product.image }}" class="card-img-top"
                                     alt="{{ product.image }}">
                                <div class="product-content">
                                    <div>
                                        <p class="card-title">
                                            <span>{{ product.nameCharacter }}</span>
                                            <br>
                                            {{ product.manga.title }}
                                        </p>
                                    </div>
                                    <span>{{ product.price }},00&euro;</span>
                                </div>
                            </a>
                            <a href="">
                                <div>Ajouter au panier</div>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </section>
    </main>
{% endblock %}
