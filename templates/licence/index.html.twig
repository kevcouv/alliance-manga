{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}

{% block body %}
    <main>
        <section id="univers-home">
            <div class="row">
                {% for licence in licences %}
                    <div class="col-lg-3 col-md-4  col-6" style="min-width:200px;">
                        <a href="{{ path('licence', {id:licence.id}) }}">
                        <img src="{{ asset('img/manga/') ~ licence.image }}" class="card-img-top" alt="{{ licence.image }}">
                        <div class="card-body">
                            <p class="card-title">{{ licence.title }}</p>
                        </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </section>
    </main>
{% endblock %}
