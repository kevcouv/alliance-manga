{% extends 'base.html.twig' %}

{% block title %}Nouveaut√©s{% endblock %}

{% block body %}
    <main class="container">
        <section id="products-home" style="padding-top: 1em">
            <div class=" justify-content-center">
                <h4 class="text-justify" style="margin-bottom: 1em; letter-spacing: -2px">Nouveaux produits</h4>
                <p class="text-justify">Il y a {{ latestProducts.getTotalItemCount }} produits.</p>
                <hr>
                <div class="row">
                    {% for product in latestProducts %}
                        {% if product.isPublished == 1 %}
                            <div class="col-lg-3 col-md-4 col-6" style="max-width: 100%">
                                <a class="card" href="{{ path('product', {id:product.id, slug:product.slug}) }}">
                                    <img src="{{ asset('img/product/') ~ product.image }}" class="card-img-top"
                                         alt="{{ product.image }}">
                                    <div class="card-body">

                                        <span>{{ product.nameCharacter }}</span><br>

                                        <span>{{ product.manga.title }}</span><br>

                                        <span class="float-right font-weight-bold">{{ product.price / 100 }} &euro;</span>
                                    </div>
                                </a>
                                <a href="{{ path('panier_add', {'id':product.id}) }}">
                                    <div>Ajouter au panier</div>
                                </a>
                            </div>
                        {% endif %}
                    {% endfor %}
                    </div>
                </div>
        </section>
    </main>
{% endblock %}


