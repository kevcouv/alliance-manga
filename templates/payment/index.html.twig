{% extends 'base.html.twig' %}

{% block title %}Payement{% endblock %}

{% block body %}
    <main class="container">
        {% if app.user %}
            <section id="addressPayement">
                <div class=" row justify-content-center">
                    <div class="col-md-9 col-11">
                        <div class="justify-content-center">
                            <h4 class="card-header ">Adresse</h4>
                            <div class="card">
                                <div class="card-body">
                                    {{ form_start(form) }}
                                    {{ form_widget(form) }}
                                        <button class="btn btn-info" type="submit"><span>Commander</span></button>
                                    {{ form_end(form) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-11">
                        <table class="table table-borderless bg-white">
                            <thead></thead>
                            <tbody>
                            <tr>
                                <td>{{ totalQuantity }} article(s)</td>
                                <td class="float-right">{{ total /100 }}&euro;</td>
                            </tr>
                            <tr>
                                <td>Livraison</td>
                                <td class="float-right">gratuit</td>
                            </tr>
                            <tr style="background-color: lightgrey" class="font-weight-bold">
                                <td>TOTAL TTC</td>
                                <td class="float-right">{{ total /100 }}&euro;</td>
                            </tr>
                            </tbody>
                            <tfoot></tfoot>
                        </table>
                    </div>

                </div>
            </section>
        {% endif %}
    </main>
{% endblock %}
