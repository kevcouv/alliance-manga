<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Alliance Manga{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/main.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/all.min.css') }}">
        <link rel="shortcut icon" type="image/png" href="{{ asset('img/logo/logo_rapport_stage.png') }}">
    {% endblock %}
</head>
<body>

<div class="section">

    <h1 class="navbar-dark row col-12 justify-content-center">
        <div class="col-md-6 col-11"><img class="float-right" src="{{ asset('img/logo/logo_video.png') }}"
                                          alt="logo_video.png"></div>
        <div class="col-md-6 col-11 text-left border-logo"><span>A</span>lliance <span>M</span>anga
            <br>
            <a href="{{ path('home') }}">
                <button class="btn btn-outline-dark"> Bienvenue <i class="fas fa-chevron-right"
                                                                   style="font-size: 22px"></i></button>
            </a>
        </div>
    </h1>


    <div class="video-container">
        <div class="color-overlay"></div>
        <video autoplay loop muted>
            <source src="{{ asset('video/anime.mp4') }}" type="video/mp4">
        </video>
    </div>

</div>

{% block javascripts %}
    <script src="{{ asset('assets/js/jquery.min.js') }}"></script>
    <script src="{{ asset('assets/js/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ asset('assets/js/all.min.js') }}"></script>
    <script src="{{ asset('assets/js/medium-zoom.min.js') }}"></script>
    <script src="{{ asset('assets/js/main.js') }}"></script>
{% endblock %}
</body>
</html>

