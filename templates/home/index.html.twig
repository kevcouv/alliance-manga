{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}

{% block body %}
    <!-- Slider -->
    <div class="bd-example">
        <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
                <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="{{ asset('img/banner/banner_01.png') }}" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="{{ asset('img/banner/banner_03.png') }}" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="{{ asset('img/banner/banner_02.png') }}" class="d-block w-100" alt="...">
                </div>
                <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
    <!-- End Slider -->

    <!-- Manga Univers Products-->
    <main>
        <!-- Details-->
        <section id="details-home">
            <div class="col-md-4 col-md-2 ">
                <i class="fa fa-star fa-2x"></i>
                <p>Produits sous licence 100% officiels</p>
            </div>
            <div class="col-md-4 col-md-2 ">
                <i class="fa fa-truck fa-2x"></i>
                <p>Livraison en 48h et offerte dès 80&euro; d'achat</p>
            </div>
            <div class="col-md-4 col-md-2  ">
                <i class="fa fa-credit-card fa-2x"></i>
                <p>Paiment en 3 et 4x sans frais dès 100&euro;</p>
            </div>
        </section>


        <!-- end details-->

        <section id="univers-home">
            <h2 class="my-5">Univers Manga</h2>
            <div class="row">
                {% for licence in licences %}
                    <div class="col-lg-3 col-md-4  col-6" style="min-width:200px;">
                        <a href="{{ path('licence', {id:licence.id}) }}">
                            <img src="{{ asset('img/manga/') ~ licence.image }}" class="card-img-top"
                                 alt="{{ licence.image }}">
                            <div class="card-body">
                                <p class="card-title">{{ licence.title }}</p>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
            <div>
                <a href="{{ path('licences') }}">
                    <button>Tous les univers</button>
                </a>
            </div>
        </section>
        <!-- End  Manga Univers Products -->

        <!-- latest Manga Products -->
        <div class="products-h2">
            <h2 class="my-5">Nos dernières nouveautés</h2>
        </div>
        <section id="products-home">
            <div class="row">
                {% for product in products %}
                    <div class="col-lg-3 col-md-4 col-6" style="min-width:150px; width: 300px; max-width: 300px">
                        <div>
                            <a href="{{ path('product', {id:product.id}) }}">
                                <img src="{{ asset('img/product/') ~ product.image }}" class="card-img-top"
                                     alt="{{ product.image }}">
                                <div class="product-content">
                                    <div>
                                        <p class="card-title">
                                            <span>{{ product.nameCharacter }}</span>
                                            <br>
                                            {{ product.manga.title }}
                                        </p>
                                    </div>
                                    <span>{{ product.price }},00&euro;</span>
                                </div>
                            </a>
                            <a href="">
                                <div>Ajouter au panier</div>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </section>
        <!-- End latest Manga Products -->
    </main>
{% endblock %}
